<% model_class = Post %>
  <div class="my-4">
    <h1><%= t('.edit', default: t('helpers.titles.edit', model: model_class.model_name.human)) %></h1>
  </div>

  <%= render 'form', post: @post %>

  <%= link_to t('.show', default: t('helpers.links.show')), @post, class: "btn btn-info btn-sm" %>
  |
  <%= link_to t('.back', default: t('helpers.links.back')), posts_path, class: "btn btn-danger btn-sm" %>