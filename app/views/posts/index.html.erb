<div class="col-md-8">
  <p id="notice"><%= notice %></p>
  <div class="my-4">
    <h1>Posts</h1>
  </div>
  <table class="table table-sm">
    <thead>
      <tr>
        <th scope="col">Author</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
        <th scope="col" colspan="3" class="text-center">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td scope="row"><%= post.author %></td>
          <td><%= post.title %></td>
          <td><%= truncate(post.content, lenght: 10) %></td>
          <td><%= link_to 'Show', post, class: "btn btn-outline-info btn-sm" %></td>
          <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-outline-success btn-sm" %></td>
          <td><%= link_to 'Destroy', post, class: "btn btn-outline-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Post', new_post_path, class: "btn btn-primary" %>

</div>