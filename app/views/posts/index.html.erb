<% model_class = Post %>
  <div class="col-md-8">
    <div class="my-4">
      <h1><%= model_class.model_name.human.pluralize.titleize %></h1>
    </div>
    <table class="table table-sm">
      <thead>
        <tr>
          <th scope="col"><%= model_class.human_attribute_name(:author) %></th>
          <th scope="col"><%= model_class.human_attribute_name(:title) %></th>
          <th scope="col"><%= model_class.human_attribute_name(:content) %></th>
          <th scope="col" colspan="3" class="text-center"><%= t('.actions', default: t('helpers.links.actions')) %></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td scope="row"><%= post.author %></td>
            <td><%= post.title %></td>
            <td><%= truncate(post.content, lenght: 10) %></td>
            <td><%= link_to t('.show', default: t('helpers.links.show')), post, class: "btn btn-outline-info btn-sm" %></td>
            <td><%= link_to t('.edit', default: t('helpers.links.edit')), edit_post_path(post), class: "btn btn-outline-success btn-sm" %></td>
            <td><%= link_to t('.destroy', default: t('helpers.links.destroy')), post, class: "btn btn-outline-danger btn-sm", method: :delete, data: { confirm: t('.confirm', default: t('helpers.links.confirm')) } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to t('.new', default: t('helpers.links.new', model: model_class.model_name.human)), new_post_path, class: "btn btn-primary" %>

  </div>