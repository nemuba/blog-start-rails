<div class="col-md-8">
  <p id="notice"><%= notice %></p>
  <div class="my-4">
    <h1>Post</h1>
  </div>
  <p>
    <strong>Author:</strong>
    <%= @post.author %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= @post.content %>
  </p>

  <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-success btn-sm" %>
  |
  <%= link_to 'Back', posts_path, class: "btn btn-danger btn-sm" %>
</div>